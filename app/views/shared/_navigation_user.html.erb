<ul class="nav navbar-nav navbar-right navigation_user">
  <% if user_signed_in? %>
    <li class="active"><%= link_to '+ Add article', new_article_path %></li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">User <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><%= link_to('Show my articles', '#') %></li>
        <li><%= link_to('Edit registration', edit_user_registration_path) %></li>
        <li class="divider"></li>
        <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
      </ul>
    </li>
  <% else %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Login <b class="caret"></b></a>
      <div class="login-menu dropdown-menu">
        <%= form_for('user', :url => user_session_path, role: 'form') do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control', placeholder: 'Enter email' %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
          </div>
          <div class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            | <%= link_to "Forgot your password?", new_password_path('user') %>
          </div>
          <%= f.submit 'Login', class: 'btn btn-primary btn-sm' %>
          <%= link_to('Register', new_user_registration_path, class: "btn btn-success btn-sm")  %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
